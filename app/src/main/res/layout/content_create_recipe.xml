<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/scrollView7"
    android:fillViewport="true"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".CreateRecipe">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/create_layout"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_create_recipe"
        >






        <Button
            android:background="@drawable/buttonshape"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="@string/paste"
            android:id="@+id/paste"
            android:onClick="paste"
            android:layout_gravity="right" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:inputType="textMultiLine"
            android:hint="@string/type"
            android:id="@+id/createRecipe"
            android:scrollbars="vertical"
            android:gravity="left"
            android:layout_weight="1"
             />

        <Button
            android:background="@drawable/buttonshape"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/add_pic"
            android:id="@+id/recipepic"
            android:onClick="recipe_pic" />


        <ImageView
            android:layout_marginTop="12dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/selected_pic" />

        <Button
            android:layout_marginTop="5dp"
            android:background="@drawable/buttonshape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:id="@+id/save"
            android:onClick="save"/>


    </LinearLayout>
</ScrollView>