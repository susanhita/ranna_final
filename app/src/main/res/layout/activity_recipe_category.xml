<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.habijabi.ranna.RecipeCategory">


    <Button
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:id="@+id/snacks"
        android:drawableTop="@drawable/snacks"
        android:onClick="snacks"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:text="জলখাবার "
        android:textStyle="bold" />

    <Button
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:id="@+id/veg"
        android:drawableTop="@drawable/veg"
        android:longClickable="false"
        android:onClick="veg"
        android:text="নিরামিষ"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textStyle="bold" />

    <Button
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:id="@+id/nonveg"
        android:onClick="nonveg"
        android:drawableTop="@drawable/nonveg"
        android:text="আমিষ"
        android:layout_alignTop="@+id/festival"
        android:layout_alignParentEnd="true"
        android:textStyle="bold" />

    <Button
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:id="@+id/beverages"
        android:drawableTop="@drawable/beverage"
        android:onClick="beverage"
        android:text="পানীয়"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <Button
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:id="@+id/desserts"
        android:onClick="desserts"
        android:drawableTop="@drawable/desserts"
        android:text="মিষ্টান্ন "
        android:layout_below="@+id/snacks"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:id="@+id/all"
        android:drawableTop="@drawable/all"
        android:onClick="all"

        android:text="সব রেসিপি"
        android:layout_below="@+id/festival"
        android:layout_alignStart="@+id/festival"
        android:layout_marginTop="32dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:onClick="festival"

        android:id="@+id/festival"
        android:drawableTop="@drawable/festival"
        android:text="বিদেশী"
        android:layout_alignTop="@+id/desserts"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />
</RelativeLayout>
